var pasangan_list = [
    ["dh", "꧀ꦝ"],
    ["ny", "꧀ꦚ"],
    ["th", "꧀ꦛ"],
    ["ng", "꧀ꦔ"]
    ["h", "꧀ꦲ"],
    ["n", "꧀ꦤ"],
