    ["y", "꧀ꦪ"],
    ["m", "꧀ꦩ"],
    ["g", "꧀ꦒ"],
    ["b", "꧀ꦧ"],
]

var akasara_list_regex;
for (var al in aksara_list){
    for (var pl in pasangan_list){
        var str = al[0].concat(pl[0].concat("a"));
        val re = new RegExp(str, "g");
        akasara_list_regex.push([re, al[1].concat(pl[1])]);
    }
}
for (var al in aksara_list){
    var re = new RegExp(al[0].concat("a"),"g");
    akasara_list_regex.push([re,al[1]]);
}

function aksara(input){
    var res = input;
    for (var i in akasara_list_regex){
        var pair = akasara_list_regex[i];
        res = res.replace(pair[0],pair[1]);
    }
    return res;
}

export { aksara };
